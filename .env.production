# Server Configuration
NODE_ENV=production
PORT=3004
CLIENT_URL=https://yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://postgres:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/confession_game?schema=public
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_IN_PRODUCTION
SESSION_MAX_AGE=86400000

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_JWT_SECRET
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_REFRESH_SECRET
JWT_REFRESH_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Game Configuration
MAX_PLAYERS_PER_ROOM=20
MAX_ROOMS=100
MATCHMAKING_TIMEOUT=5000
GAME_ROUND_DURATION=90000

# Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Performance
SOCKET_MAX_CONNECTIONS=1000
SOCKET_PING_TIMEOUT=5000
SOCKET_PING_INTERVAL=25000

# Optional: Remove or comment out in production if not using SSL with nginx
# SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem